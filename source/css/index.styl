html, body
    background #f2f2f2
    color #333
    padding 0
    margin 0
    font-family Calibri, Helvetica, Arial, sans-serif

.site-header
    height 60px
    background #fff
    border-bottom 1px solid #eee

    &:after
        content ''
        clear both
        display block

    .site-title
        float left
        height 60px
        line-height 60px
        vertical-align middle
        font-weight 600
        font-size 28px
        padding-left 1em

    .nav-links
        float right
        list-style none
        padding 0
        margin 0

        .nav-link
            display inline-block
            padding 0
            margin 0

            a
                color #333
                height 60px
                line-height 60px
                text-decoration none
                padding 0 1em
                display inline-block
                transition background .3s ease-in-out

                &:hover
                    background #f2f2f2

.tab
    display none

    &.visible
        display block